<div class="container-fluid">
  <div class="row">
    <div class="col-sm-5">
      <h3>Demo</h3>
      <div class="table-wrapper dark">
        <VerticalCollection
          @items={{@model.data.filtered}}
          @defaultHeight={{270}}
          @useContentProxy={{false}}
          as |item index|
        >
          <div class="image-slide">
            <NumberSlide
              @number={{item.number}}
              @index={{index}}
            />
          </div>
        </VerticalCollection>
      </div>
    </div>
    <div class="col-sm-7">
      <h3>Reduce Debug</h3>
      <p>
        Ensure we can shrink the array safely.
      </p>
      <p>
        <button {{on "click" this.filter}}>Trigger Filter</button>
      </p>
      <h4>Code for Demo</h4>
    </div>
  </div>
</div>